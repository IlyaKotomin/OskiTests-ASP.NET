@model IEnumerable<QuizViewModel>

@{
	ViewData["Title"] = "Quizzes!";
}

<div class="row">
    @foreach (var quiz in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-primary">
                            <p class="card-text">
                                <h5 class="card-title">@quiz.Name</h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-body">
                            <p class="card-text"><b>Description: </b>@quiz.Description</p>
                            <p class="card-text"><b>Questions number: </b>@quiz.Questions?.Count</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <a class="btn btn-outline-success float-start float-md-none">Start</a>
                                @if (true)      //(User.Identity!.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <a class="btn btn-outline-secondary">Edit</a>
                                    <a class="btn btn-outline-danger float-end">Delate</a>
                                }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>